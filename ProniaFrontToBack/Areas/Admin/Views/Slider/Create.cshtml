@model ProniaFrontToBack.Models.Slider

<div class="container">
      <h1>Create Slider</h1>
      <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form-group">
                  <label for="NameInput">Name</label>
                  <input asp-for="Name" type=" text" class="form-control" id="NameInput" placeholder="Enter Name">
                  <span asp-validation-for="Name" class="text-danger"></span>

            </div>
            <div class="form-group">
                  <label for="DescriptionInput">Description</label>
                  <input asp-for="Description" type=" text" class="form-control" id="DescriptionInput"
                        placeholder="Enter Description">
                  <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                  <label for="ImageInput">Image</label>
                  <input asp-for="ImageFile" type="file" class="form-control" id="ImageInput" placeholder="Enter Image">
                  <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                  <label for="DiscountRateInput">Discount Rate</label>
                  <input asp-for="DiscountRate" type="number" class="form-control" id="DiscountRateInput"
                        placeholder="Enter Discount Rate">
                  <span asp-validation-for="DiscountRate" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</div>