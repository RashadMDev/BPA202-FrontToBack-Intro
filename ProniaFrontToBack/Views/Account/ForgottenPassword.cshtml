@model ProniaFrontToBack.ViewModels.Account.ForgotVM
<!-- Begin Main Content Area -->
<main class="main-content">
      <div class="breadcrumb-area breadcrumb-height" data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
            <div class="container h-100">
                  <div class="row h-100">
                        <div class="col-lg-12">
                              <div class="breadcrumb-item">
                                    <h2 class="breadcrumb-heading">Send E-Mail</h2>
                                    <ul>
                                          <li>
                                                <a asp-controller="Home" asp-action="Index">Home</a>
                                          </li>
                                          <li>
                                                <a asp-controller="Account" asp-action="Login">
                                                      Back to Login
                                                </a>
                                          </li>
                                    </ul>
                              </div>
                        </div>
                  </div>
            </div>
      </div>
      <div class="login-register-area section-space-y-axis-100">
            <div class="container">
                  <div class="row">
                        <div class="col-lg-6" style="margin: 0 auto;">
                              <form asp-action="ForgottenPassword" method="post">
                                    <input type="hidden" name="ReturnUrl" value="@Context.Request.Query["ReturnUrl"]" />
                                    <div class="login-form">
                                          <div asp-validation-summary="All" class="text-danger"></div>
                                          <h4 class="login-title">Login</h4>
                                          <div class="row">
                                                <div class="col-lg-12">
                                                      <label asp-for="Email">Email Address*</label>
                                                      <input asp-for="Email" type="email" placeholder="Email Address" />
                                                      <span asp-validation-for="Email" class="text-danger"></span>
                                                </div>
                                                <div class="col-lg-12 pt-5">
                                                      <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                                            Send E-Mail
                                                      </button>
                                                </div>
                                          </div>
                                    </div>
                              </form>
                        </div>
                  </div>
            </div>
      </div>
</main>
<!-- Main Content Area End Here -->